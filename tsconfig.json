{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
